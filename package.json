{
  "name": "kodekraftai",
  "displayName": "KodeKraftAI",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "1.81.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:kodekraftai.generateDocumentation",
    "onCommand:kodekraftai.convertCodebase",
    "onCommand:kodekraftai.showLanguageMenu",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kodekraftai.generateDocumentation",
        "title": "Kora AI: Generate Documentation"
      },
      {
        "command": "kodekraftai.convertCodebase",
        "title": "Kora AI: Convert Codebase"
      },
      {
        "command": "kodekraftai.showLanguageMenu",
        "title": "Kora AI: Convert Selected Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@octokit/types": "^12.3.0",
    "@types/esprima": "^4.0.6",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@octokit/auth-oauth-app": "^7.0.1",
    "@octokit/oauth-app": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "@types/config": "^3.3.3",
    "dotenv": "^16.3.1",
    "esrecurse": "^4.3.0",
    "fast-xml-parser": "^4.3.2",
    "langchain": "^0.0.192",
    "openai": "^4.18.0",
    "zod": "^3.22.4"
  }
}
